
<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Environment overrides with safe defaults -->
    <property name="APP_NAME" value="${APP_NAME:-orders-inventory-service}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>

    <!-- Pattern (includes MDC keys for traceability) -->
    <property name="STRUCTURED_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level %logger{36} [%X{correlationId} %X{user} %X{orderId}] - %msg%n"/>

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${STRUCTURED_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Daily rolling file (14-day history) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${STRUCTURED_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Async wrapper to reduce IO overhead -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>8192"
        </queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- Root logger -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </root>

    <!-- Tune framework loggers -->
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <!-- Hibernate: keep low by default; temporarily raise to INFO to debug SQL -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
</configuration>
